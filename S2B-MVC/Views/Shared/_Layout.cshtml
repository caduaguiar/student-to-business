﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    
    @Styles.Render("~/Content/bootstrap")
    
    <style type="text/css">
        body {
            padding-top: 75px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="javascript:;">S2B</a>

                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i>Kadu Aguiar
                            <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:;">Perfil</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript:;">Sair</a></li>
                    </ul>
                </div>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="javascript:;">Home</a></li>
                        <li><a href="javascript:;">Administrativo</a></li>
                        <li><a href="javascript:;">Cadastro</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        
        <hr />
        <footer>
            <p>&copy; Projeto S2B 2012</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>